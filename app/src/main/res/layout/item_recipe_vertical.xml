<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit_text"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_float_button_home"
                android:src="@drawable/ic_favorites"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="21dp"
                android:elevation="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_item_vertical"
                android:layout_width="72dp"
                android:layout_height="82dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_item_Vertical_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:text="Ensalada de frutas"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_item_vertical"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_item_Vertical_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                tools:text="$30"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/iv_item_vertical"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_Vertical_title" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="11dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/img_delivery"
                app:layout_constraintStart_toEndOf="@+id/iv_item_vertical"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_Vertical_price" />

            <TextView
                android:id="@+id/tv_item_Vertical_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="8dp"
                android:text="Delivery gratis"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_Vertical_price" />

            <TextView
                android:id="@+id/tv_item_vertical_gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                tools:text="Apto Celiacos"
                android:textSize="14sp"
                android:textColor="@color/yellow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>